# LinkifyMe Backend Environment Variables
# Copy this file to .env and fill in your values

# === Google Sheets ===
# JSON string of your service account credentials
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
# The ID from your Google Sheet URL (https://docs.google.com/spreadsheets/d/THIS_IS_THE_ID/edit)
GOOGLE_SHEET_ID=your_sheet_id_here

# === Apify ===
APIFY_API_TOKEN=apify_api_xxxxx
APIFY_ACTOR_ID=curious_coder/linkedin-profile-scraper

# === OpenAI ===
OPENAI_API_KEY=sk-xxxxx

# === PDF Generation (Optional) ===
# If not set, falls back to WeasyPrint (requires pip install weasyprint)
PDFSHIFT_API_KEY=

# === Application ===
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# === Server ===
HOST=0.0.0.0
PORT=8000
